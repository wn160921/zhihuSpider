<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="xin.wangning.mapper.QuestionMapper">

    <select id="selectById" parameterType="int" resultType="xin.wangning.domain.Question">
        select * from question where id=#{id}
    </select>

    <select id="selectAll" resultType="xin.wangning.domain.Question">
        select * from question
    </select>

    <insert id="insertQuestion" parameterType="xin.wangning.domain.Question">
        <selectKey keyProperty="id" order="AFTER" resultType="int">
            select LAST_INSERT_ID()
        </selectKey>
        insert into question(title,url,scannum,focusnum,datecreated,datemodified)values(#{title},#{url},#{scanNum},#{focusNum},#{dateCreated},#{dateModified})
    </insert>

</mapper>